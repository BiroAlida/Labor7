<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:layout_marginTop="0dp"
        />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="10dp"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:text="Date Picker"
        android:layout_centerHorizontal="true"/>

    <RadioButton
        android:id="@+id/radioButtonMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="10dp"
        android:text="Male" />

    <RadioButton
        android:id="@+id/radioButtonFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="10dp"
        android:text="Female"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonMale"
        android:layout_marginTop="10dp"
        android:text="Dancing" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonFemale"
        android:layout_marginTop="10dp"
        android:text="Swimming"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonFemale"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:text="Drawing" />

    <Spinner
        android:id="@+id/spinnerDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewYearOfStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDepartment"
        android:layout_marginTop="12dp"
        android:text="Year Of Study" />

    <RadioButton
    android:id="@+id/radioButtonI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinnerDepartment"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="-85dp"
    android:layout_marginTop="10dp"
    android:layout_toEndOf="@+id/textViewYearOfStudy"
    android:layout_toRightOf="@+id/textViewYearOfStudy"
    android:text="I" />

    <RadioButton
        android:id="@+id/radioButtonII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDepartment"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/radioButtonI"
        android:layout_toRightOf="@+id/radioButtonI"
        android:text="II" />

    <RadioButton
        android:id="@+id/radioButtonIII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDepartment"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="-181dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/radioButtonII"
        android:layout_toRightOf="@+id/radioButtonII"
        android:text="III" />

    <RadioButton
        android:id="@+id/radioButtonIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDepartment"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="-233dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/radioButtonIII"
        android:layout_toRightOf="@+id/radioButtonIII"
        android:text="IV" />

    <EditText
        android:id="@+id/editTextExpectations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonII"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Expectations" />


</RelativeLayout>